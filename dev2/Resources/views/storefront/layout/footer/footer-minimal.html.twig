{% sw_extends '@Storefront/storefront/layout/footer/footer-minimal.html.twig' %}

{% block layout_footer_inner_container %}
  <footer class="footer-minimal container">
    {% block layout_footer_bottom %}
       <div class="footer-bottom">
        {{ block('layout_footer_vat') }}

        {{ block('layout_footer_service_menu') }}

        {% block layout_footer_copyright %}
            <div class="footer-copyright px-4">
                <div>{{ "mm-theme.company.legal"|trans|sw_sanitize }}</div>
                <div>{{ "footer.copyrightInfo"|trans|sw_sanitize }}</div>
            </div>
        {% endblock %}

    </div>
    {% endblock %}
  </footer>
{% endblock %}



