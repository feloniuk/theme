{% block mm_youtube %}
    {% set youtubeVideoId = page.product.translated.customFields.product_tabs_youtube_id %}
    {% if youtubeVideoId != '' %}
        <div class="video">
            <iframe
                id="mm-youtube-player"
                src="https://www.youtube.com/embed/{{youtubeVideoId}}"
                frameborder="0"
                allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
            </iframe>
        </div>
    {% endif %}
{% endblock %}
