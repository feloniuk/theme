{% sw_extends '@Storefront/storefront/layout/header/actions/account-widget.html.twig' %}

{% block layout_header_actions_account_widget_dropdown_button %}
    <button class="btn account-menu-btn header-actions-btn"
            type="button"
            id="accountWidget"
            data-offcanvas-account-menu="true"
            data-bs-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
            aria-label="{{ "account.myAccount"|trans|striptags }}">
        {% sw_icon 'avatar' %}

        <span class="badge header-account-badge tippy-message d-none"
            data-last-order-warning
            data-tippy-content="{{ 'mm-theme.account.unfinishedOrder'|trans|sw_sanitize }}">1</span>
    </button>
{% endblock %}
